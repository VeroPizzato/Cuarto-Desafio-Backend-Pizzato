<h1 class="text-center">Listado de Productos</h1>

<div class="container my-2 mx-auto text-center">
  <div class="row">
    {{#each products}}
    <div class="col-md-3 my-4">
      <div class="card alturaCaja img-product">
        <img src={{thumbnail}} class="card-img-top" alt={{title}} />
        <div class="card-body">
          <h6 class="card-text text-center">{{title}}</h6>
          <h3 class="text-center">$ {{price}}</h3>
        </div>
        <button class="btn btn-secondary text-center btn-eliminarProd" id={{id}}>Eliminar</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

